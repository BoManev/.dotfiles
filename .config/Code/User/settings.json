{ 
"editor.fontFamily": "LigaSauceCodePro Nerd Font",
"editor.fontLigatures": true, 
"workbench.colorTheme": "Gruvbox Dark Hard",
"workbench.iconTheme": "gruvbox-material-icon-theme",
"window.titleBarStyle": "custom",

"editor.bracketPairColorization.enabled": true,
"editor.guides.bracketPairs": "active",
"color-highlight.markerType": "dot-after",
"color-highlight.languages": ["!assembly"],

"terminal.integrated.fontFamily": "SauceCodePro Nerd Font Mono",
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/bin/zsh"
    },
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.scrollback": 100000,
  "workbench.colorCustomizations": {
    "terminal.ansiBlack": "#3f4451",
    "terminal.ansiBlue": "#4aa5f0",
    "terminal.ansiBrightBlack": "#4f5666",
    "terminal.ansiBrightBlue": "#4dc4ff",
    "terminal.ansiBrightCyan": "#4cd1e0",
    "terminal.ansiBrightGreen": "#a5e075",
    "terminal.ansiBrightMagenta": "#de73ff",
    "terminal.ansiBrightRed": "#ff616e",
    "terminal.ansiBrightWhite": "#d7dae0",
    "terminal.ansiBrightYellow": "#f0a45d",
    "terminal.ansiCyan": "#42b3c2",
    "terminal.ansiGreen": "#8cc265",
    "terminal.ansiMagenta": "#c162de",
    "terminal.ansiRed": "#e05561",
    "terminal.ansiWhite": "#e6e6e6",
    "terminal.ansiYellow": "#d18f52",
    "terminal.background": "#282c34",
    "terminal.border": "#3e4452",
    "terminal.foreground": "#abb2bf",
    "terminal.selectionBackground": "#abb2bf30",
    "titleBar.activeBackground": "#191919cc",
    "titleBar.activeForeground": "#ffffff"
  },

  "files.associations": {
    "**/i3/config": "i3",
  },

  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "prettier.requireConfig": true,
  "explorer.confirmDelete": false,
  "[python]": {
    "editor.formatOnType": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "c-cpp-flylint.lizard.enable": false,
  "c-cpp-flylint.flexelint.enable": false,
  "c-cpp-flylint.flawfinder.enable": false,
  "C_Cpp.default.cppStandard": "c++11",
  "jupyter.askForKernelRestart": false,
  "window.zoomLevel": 1,
  "c-cpp-flylint.clang.enable": false,
}
