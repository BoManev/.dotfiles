set $mod Mod4
floating_modifier $mod

gaps inner 5 
gaps outer 0
smart_gaps on

set $bg #282828
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021
set $light #fbf1c7

set $ws1 "1:I"
set $ws2 "2:II"
set $ws3 "3:III"
set $ws4 "4:IV"
set $ws5 "5:V"
set $ws6 "6:VI"
set $ws7 "7:VII"
set $ws8 "8:VIII"
set $ws9 "9:IX"
set $ws10 "10:X"

bar {
    font pango: System San Francisco, FontAwesome 12
    strip_workspace_numbers yes
    position top
    status_command ~/.cargo/bin/i3status-rs ~/.dotfiles/i3status-rs/config.toml
    colors {        
        separator $bg
        background $bg
        statusline $light
        # border / bg / text
        focused_workspace    $aqua $aqua $darkgray
        inactive_workspace   $darkgray $darkgray $yellow
        active_workspace     $darkgray $darkgray $yellow
        urgent_workspace     $red $red $bg  
    }
}

# lxappearance for sys fonts
font pango: System San Francisco 10 
for_window [class=".*"] border pixel 0
# border / bg / text / indicator / child border
