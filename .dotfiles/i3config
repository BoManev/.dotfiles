set $mod Mod4
floating_modifier $mod

gaps inner 5 
gaps outer 0
smart_gaps on

set_from_resource $foreground  foreground  #dcd7ba
set_from_resource $background  background  #1f1f28
set_from_resource $cursorColor cursorColor #dcd7ba
set_from_resource $black      color0  #090618
set_from_resource $darkblack  color8  #727169
set_from_resource $red        color1  #c34043
set_from_resource $darkred    color9  #e82424
set_from_resource $green      color2  #76946a
set_from_resource $darkgreen  color10 #98bb6c
set_from_resource $yellow     color3  #c0a36e
set_from_resource $darkyellow color11 #e6c384
set_from_resource $blue       color4  #7e9cd8
set_from_resource $darkblue   color12 #7fb4ca
set_from_resource $magenta    color5  #957fb8
set_from_resource $darkmagenta color13 #938aa9
set_from_resource $cyan       color6  #6a9589
set_from_resource $darkcyan   color14 #7aa89f
set_from_resource $white      color7  #c8c093
set_from_resource $darkwhite  color15 #dcd7ba

set $ws1 "1:I"
set $ws2 "2:II"
set $ws3 "3:III"
set $ws4 "4:IV"
set $ws5 "5:V"
set $ws6 "6:VI"
set $ws7 "7:VII"
set $ws8 "8:VIII"
set $ws9 "9:IX"
set $ws10 "10:X"

bar {
    font pango: System San Francisco 12, FontAwesome 12
    strip_workspace_numbers yes
    position top
    status_command ~/.cargo/bin/i3status-rs ~/.dotfiles/i3status-rs.toml
    colors {
        separator $background
        background $background
        statusline $darkwhite
        # border / bg / text
        focused_workspace  $darkgreen $background $foreground
        inactive_workspace $darkblack $background $foreground
        urgent_workspace   $red  $background $foregroun
    }
}

# lxappearance for sys fonts
font pango: System San Francisco 10 
for_window [class=".*"] border pixel 0

exec --no-startup-id nm-applet
exec --no-startup-id flameshot
exec --no-startup-id 1password --silent

# xprop
for_window [class="Blueman-manager"] floating enable
for_window [class="Pavucontrol"] floating enable resize set 600 900
for_window [class="Gnome-calculator"] floating enable
for_window [class="Alacritty" workspace=$ws1] resize set 33 ppt
for_window [class="xpad"] floating enable 
for_window [class="1Password"] floating enable resize set 100 100
for_window [title="Picture-in-Picture"] sticky enable
set $i3lockwall sh ~/.dotfiles/scripts/lock-screen.sh

bindsym $mod+b exec --no-startup-id blueberry
bindsym $mod+c exec --no-startup-id pavucontrol
bindsym $mod+d exec dmenu_run -b -fn "System San Francisco-12"

bindsym $mod+s split s
bindsym $mod+v split v
bindsym $mod+w layout tabbed
bindsym $mod+f fullscreen toggle
bindsym $mod+e layout toggle split

bindsym $mod+n floating toggle exec --no-startup-id alacritty -e nvim

bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+Shift+e exec i3-msg exit
bindsym $mod+Shift+q kill

bindsym $mod+Shift+d exec --no-startup-id j4-dmenu --dmenu 'dmenu -b -fn "System San Francisco-12"'
bindsym $mod+Shift+s exec --no-startup-id $i3lockwall
bindsym $mod+Return exec ~/tools/sources/alacritty/target/release/alacritty --config-file ~/.dotfiles/alacritty.yml
bindsym $mod+Shift+Return floating toggle exec ~/tools/sources/alacritty/target/release/alacritty --config-file ~/.dotfiles/alacritty.yml

bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- 
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+Ctrl+h resize shrink width 1 px or 1 ppt
bindsym $mod+Ctrl+j resize shrink height 1 px or 1 ppt
bindsym $mod+Ctrl+k resize grow height 1 px or 1 ppt
bindsym $mod+Ctrl+l resize grow width 1 px or 1 ppt
